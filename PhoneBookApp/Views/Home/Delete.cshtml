@model Contact
@{
    ViewData["Title"] = "DeleteContact";
}

<div class="container">
    <h1 class="p-5 text-center">Delete Contact</h1>

    <form method="post" asp-action="DeletePost">
        <input asp-for="ContactId" hidden />
        <div class="border p-5">
            <div class="mb-3">

                <label asp-for="FirstName" class="form-label">First Name</label>
                <input type="text" asp-for="FirstName" class="form-control" id="firstName" disabled>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input type="text" asp-for="LastName" class="form-control" id="lastName" disabled>
                <span asp-validation-for="LastName" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                <input type="tel" asp-for="PhoneNumber" class="form-control" id="Phone" disabled>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-12 row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger w-100" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" class="btn btn-secondary  w-100">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
